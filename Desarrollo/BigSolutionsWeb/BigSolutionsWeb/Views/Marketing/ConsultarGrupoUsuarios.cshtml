@{
    ViewData["Title"] = "Detalles del Grupo de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Detalles del Grupo de Usuarios</h1>
        <p>Aquí puedes ver la información completa del grupo y los usuarios que pertenecen a él.</p>
    </div>


    <div class="card mb-4">
        <div class="card-header">
            <h3>Información del Grupo</h3>
        </div>
        <div class="card-body">
            <p><strong>Número de Grupo:</strong> 001</p>
            <p><strong>Nombre del Grupo:</strong> Administradores</p>
            <p><strong>Descripción:</strong> Grupo con acceso completo al sistema</p>
            <p><strong>Fecha de Creación:</strong> @DateTime.Now</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h3>Usuarios en el Grupo</h3>
        </div>
        <div class="card-body">
            <table id="tabla-UsuariosGrupo" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Identificación</th>
                        <th style="text-align:left">Nombre</th>
                        <th style="text-align:left">Correo</th>
                        <th style="text-align:left">Rol</th>
                        <th style="text-align:left">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:left">12345678</td>
                        <td style="text-align:left">Juan Pérez</td>
                        <td style="text-align:left">juan.perez@ejemplo.com</td>
                        <td style="text-align:left">Administrador</td>
                        <td style="text-align:left">Activo</td>
                    </tr>
                    <tr>
                        <td style="text-align:left">87654321</td>
                        <td style="text-align:left">Ana García</td>
                        <td style="text-align:left">ana.garcia@ejemplo.com</td>
                        <td style="text-align:left">Usuario</td>
                        <td style="text-align:left">Inactivo</td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="card-footer text-center py-3">
            <a href="@Url.Action("ConsultarGruposUsuarios", "Marketing")" class="inventario-link">Volver a los grupos de usuarios</a>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tabla-UsuariosGrupo').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            }
        });
    });
</script>
