@{
    ViewData["Title"] = "Grupos de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Grupos de Usuarios</h1>
        <p>Aquí puedes ver todos los grupos de usuarios que han sido creados.</p>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Grupos de Usuarios</h3>
            <a href="@(Url.Action("AgregarGrupoUsuarios", "Marketing"))" class="botones-secundarios">Agregar Grupo de Usuarios</a>
        </div>
        <div class="card-body" style="padding-left: 15px; padding-right: 15px;">
            <table id="tabla-Grupos" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Número de Grupo</th>
                        <th style="text-align:left">Nombre del Grupo</th>
                        <th style="text-align:left">Descripción</th>
                        <th style="text-align:left">Fecha de Creación</th>
                        <th style="text-align:left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:left">001</td>
                        <td style="text-align:left">Administradores</td>
                        <td style="text-align:left">Grupo con acceso completo al sistema</td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">
                            <a href="@(Url.Action("ConsultarGrupoUsuarios", "Marketing", new { id = 001 }))" class="botones">Ver detalles</a>
                            <a href="@(Url.Action("EditarGrupoUsuarios", "Marketing", new { id = 001 }))" class="botones">Editar</a>
                            <a href="#" class="eliminar-grupo botones" data-id="1">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">002</td>
                        <td style="text-align:left">Usuarios</td>
                        <td style="text-align:left">Grupo con acceso limitado al sistema</td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">
                            <a href="@(Url.Action("ConsultarGrupoUsuarios", "Marketing", new { id = 002 }))" class="botones">Ver detalles</a>
                            <a href="@(Url.Action("EditarGrupoUsuarios", "Marketing", new { id = 002 }))" class="botones">Editar</a>
                            <a href="#" class="eliminar-grupo botones" data-id="1">Eliminar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tabla-Grupos').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            }
        });

        //Alerta de eliminación
        $('.eliminar-grupo').on('click', function (e) {
            e.preventDefault();
            var productId = $(this).data('id');
            Swal.fire({
                title: '¿Está seguro que deseas eliminar este grupo?',
                text: "No podrá revertir esto",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#c1952c',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarlo',
                customClass: {
                    popup: 'my-swal-popup'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Eliminado',
                        text: 'El grupo ha sido eliminado',
                        icon: 'success',
                        confirmButtonColor: '#c1952c',
                        customClass: {
                            popup: 'my-swal-popup'
                        }
                    }).then(() => {
                    });
                }
            });
        });
    });
    
   
        
</script>
