@model BigSolutionsWeb.Entidades.Usuario
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <img src="~/page/images/bigsolutions-logo.jpg" alt="logo">
                        </div>
                        <h4>Registro</h4>
                        @if (ViewBag.msj != null)
                        {
                            <div id="warningAlert" class="alert alert-warning" role="alert" style="text-align: center;">
                                @ViewBag.msj
                            </div>
                        }
                        @using (Html.BeginForm("Registro", "Usuario"))
                        {
                            <div class="pt-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control", @type = "text", @required = "required", @id = "NombreCompleto", @placeholder = "Nombre completo" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.NombreEmpresa, new { @class = "form-control", @type = "text", @required = "required", @id = "NombreEmpresa", @placeholder = "Nombre de la empresa" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control", @type = "text", @required = "required", @id = "Identificacion", @placeholder = "Identificación" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.NumeroTelefono, new { @class = "form-control", @type = "text", @required = "required", @id = "NumeroTelefono", @placeholder = "Número de teléfono" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", @type = "email", @required = "required", @id = "CorreoElectronico", @placeholder = "Correo electrónico" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.DireccionExacta, new { @class = "form-control", @type = "text", @required = "required", @id = "DireccionExacta", @placeholder = "Dirección Exacta" })
                                </div>
                                <h6 class="font-weight-light">La Contraseña tiene que tener 1 Mayúscula y 8 Caracteres</h6>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", @type = "password", @required = "required", @id = "Contrasenna", @placeholder = "Contraseña" })
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="botones" style="width:100%">REGISTRARSE</button>
                                </div>

                                <div class="text-center mt-4 font-weight-light">
                                    ¿Ya tienes una cuenta? <a href="@Url.Action("InicioSesion", "Usuario")" class="auth-link text-black">Iniciar sesión</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
</script>
