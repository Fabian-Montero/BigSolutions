@{
    ViewData["Title"] = "Configuración de Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/hojaestilos.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-center">
                    <h3 class="font-weight-extra-bold my-4">Configura tu perfil:</h3>
                </div>
                <div class="card-body">
                    <!-- Contenedor de Alertas -->
                    <div id="alert-container" class="mb-3">
                        <!-- Las alertas se mostrarán aquí -->
                    </div>

                    <form id="profile-settings-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="fullName">Nombre Completo</label>
                                    <input type="text" class="form-control form-control-lg custom-width" id="fullName" placeholder="Nombre completo" value="Juan Pérez" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="cedula">Cédula</label>
                                    <input type="text" class="form-control form-control-lg custom-width" id="cedula" placeholder="Cédula" value="12345678" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="phoneNumber">Número de Teléfono</label>
                                    <input type="tel" class="form-control form-control-lg custom-width" id="phoneNumber" placeholder="Número de teléfono" value="555-1234" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="address">Dirección Exacta</label>
                                    <input type="text" class="form-control form-control-lg custom-width" id="address" placeholder="Dirección exacta" value="Av. Siempre Viva 742" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="email">Dirección de Correo Electrónico</label>
                                    <input type="email" class="form-control form-control-lg custom-width" id="email" placeholder="Correo electrónico" value="correo@ejemplo.com" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="city">Rol</label>
                                    <input type="text" class="form-control form-control-lg custom-width" id="city" placeholder="Rol" value="Administrador" required>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-lg font-weight-medium" style="background-color: #b48a1d; border-color: #b48a1d; color: #fff;">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('profile-settings-form');
        const alertContainer = document.getElementById('alert-container');

        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Evitar el envío del formulario para la demostración

            // Validar campos (solo como ejemplo, ya que los campos están prellenados)
            let isValid = true;
            alertContainer.innerHTML = ''; // Limpiar alertas anteriores

            // Mostrar mensaje de éxito
            if (isValid) {
                showSuccess('¡Perfil actualizado correctamente!');
            }
        });

        function showSuccess(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-custom';
            alertDiv.style.textAlign = 'center';
            alertDiv.role = 'alert';
            alertDiv.innerText = message;
            alertContainer.appendChild(alertDiv);
        }
    });
</script>
