@{
    ViewData["Title"] = "Configuración de Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Configura tu perfil:</h4>

<!-- Contenedor de Alertas -->
<div id="alert-container" class="mb-3">
    <!-- Las alertas se mostrarán aquí -->
</div>

<form id="profile-settings-form">
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="fullName" placeholder="Nombre completo" value="Juan Pérez" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="cedula" placeholder="Cédula" value="12345678" required>
    </div>
    <div class="form-group">
        <input type="tel" class="form-control form-control-lg" id="phoneNumber" placeholder="Número de teléfono" value="555-1234" required>
    </div>
    <div class="form-group">
        <input type="email" class="form-control form-control-lg" id="email" placeholder="Correo electrónico" value="juan.perez@example.com" required>
    </div>
    <div class="form-group">
        <input type="text" class="form-control form-control-lg" id="address" placeholder="Dirección exacta" value="Av. Siempre Viva 742" required>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-lg font-weight-medium auth-form-btn" style="background-color: #b48a1d; border-color: #b48a1d; color: #fff;">Guardar Cambios</button>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('profile-settings-form');
        const alertContainer = document.getElementById('alert-container');

        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Evitar el envío del formulario para la demostración

            // Validar campos (solo como ejemplo, ya que los campos están prellenados)
            let isValid = true;
            alertContainer.innerHTML = ''; // Limpiar alertas anteriores

            // Mostrar mensaje de éxito
            if (isValid) {
                showSuccess('¡Perfil actualizado correctamente!');
            }
        });

        function showSuccess(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success';
            alertDiv.style.textAlign = 'center';
            alertDiv.role = 'alert';
            alertDiv.innerText = message;
            alertContainer.appendChild(alertDiv);
        }
    });
</script>
