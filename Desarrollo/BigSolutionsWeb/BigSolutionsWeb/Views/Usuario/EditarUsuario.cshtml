@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/hojaestilos.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center">
        <div class="text-center mb-4">
            <h1>Actualizar Usuarios</h1>
            <p>Aquí puedes actualizar la información del usuario.</p>
        </div>
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-left">
                    <h3 class="font-weight-extra-bold my-4">Editar Usuario</h3>
                    <!-- Alertas-->
                    <div id="successAlert" class="alert alert-success alert-custom" role="alert">
                        Usuario agregado exitosamente
                    </div>
                    <div id="warningAlert" class="alert alert-warning alert-custom" role="alert">
                        Por favor, complete todos los campos antes de enviar
                    </div>
                    <!-- Alertas-->
                </div>
                <div class="card-body">
                    <br />
                    <div class="pl-lg-4 pr-lg-4">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Nombre del usuario</label>
                                    <input type="text" id="NombreUsuario" name="NombreUsuario" class="form-control form-control-user" placeholder="Nombre" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-last-name">Identificación</label>
                                    <input type="text" id="identificacion" name="identificacion" class="form-control form-control-user" placeholder="000000000" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-first-name">Correo</label>
                                    <input type="text" id="Correo" name="Correo" class="form-control form-control-user" placeholder="xyz@gmail.com" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="rol">Seleccione el rol:</label>
                                    <br />
                                    <select name="rol" id="rol">
                                        <option value="administrador">Administrador</option>
                                        <option value="cliente">Cliente</option>
                                        <option value="colaborador">Colaborador</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-first-name">Estado</label>
                                    <input type="text" id="estado" name="estado" class="form-control form-control-user" placeholder="activo" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <button type="button" class="botones" onclick="submitForm()">Aceptar</button>
                    </div>
                    <br />
                </div>
                <div class="card-footer text-center py-3">
                    <a href="@Url.Action("ConsultarUsuariosPrueba", "Usuario")" class="inventario-link">Volver a Usuarios</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        function submitForm() {
        var nombre = document.getElementById('NombreUsuario').value.trim();
        var cantidad = document.getElementById('identificacion').value.trim();
        var precio = document.getElementById('Correo').value.trim();
        var imagen = document.getElementById('rol').value.trim();
        var cantidad = document.getElementById('estado').value.trim();

            var warningAlert = document.getElementById('warningAlert');
            var successAlert = document.getElementById('successAlert');
            warningAlert.classList.remove('show');
            successAlert.classList.remove('show');

            if (nombre === '' || cantidad === '' || precio === '' || !imagen) {
                warningAlert.classList.add('show');
                return;
            }

            successAlert.classList.add('show');

            setTimeout(function () {
                successAlert.classList.remove('show');
            window.location.href = '@Url.Action("ConsultarUsuariosPrueba", "Usuario")';
            }, 2000);
        }
</script>