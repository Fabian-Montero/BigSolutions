<script>
    $(document).ready(function () {
        var table = new DataTable("#tabla-Inventario", {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            },
            columnDefs: [{ type: 'string', target: [0] }]
        });

        //Para ver imagen del producto
        $('#tabla-Inventario').on('click', '.boceto-img', function () {
            var src = $(this).data('src');
            $('#modalImage').attr('src', src);
        });

        $('#tabla-Inventario').on('click', '.view-image', function () {
            var src = $(this).data('src');
            $('#modalImage').attr('src', src);
        });

        //Alerta de eliminación
        $('.eliminar-producto').on('click', function (e) {
            e.preventDefault();
            var productId = $(this).data('id');
            Swal.fire({
                title: '¿Está seguro que deseas eliminar este producto?',
                text: "No podrá revertir esto",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#c1952c',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarlo',
                customClass: {
                    popup: 'my-swal-popup'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Eliminado',
                        text: 'El producto ha sido eliminado',
                        icon: 'success',
                        confirmButtonColor: '#c1952c',
                        customClass: {
                            popup: 'my-swal-popup'
                        }
                    }).then(() => {
                    });
                }
            });
        });
    });
</script>



