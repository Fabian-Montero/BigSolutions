@model BigSolutionsWeb.Entidades.Producto
@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/hojaestilos.css" rel="stylesheet" />

<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Editar Producto</h1>
        <p>Aquí puedes editar un producto del inventario.</p>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="font-weight-extra-bold my-4">Formulario para editar un producto</h3>
                    </div>
                    @if (ViewBag.msj != null)
                    {
                        <div id="warningAlert" class="alert alert-warning alert-custom" role="alert" style="text-align: center;">
                            @ViewBag.msj
                        </div>
                    }
                    @using (Html.BeginForm("EditarInventario", "Inventario", FormMethod.Post, new { enctype = "multipart/form-data", id = "editarForm" }))
                    {
                        @Html.HiddenFor(m => m.IdProducto)
                        @Html.HiddenFor(m => m.RutaImagen)
                        <div class="card-body">
                            <br />
                            <div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Nombre del producto</label>
                                            @* <input type="text" id="NombreProducto" name="NombreProducto" class="form-control form-control-user" placeholder="Ingrese el nombre" required> *@
                                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre del producto", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-last-name">Cantidad</label>
                                            @* <input type="number" id="Cantidad" name="Cantidad" class="form-control form-control-user" placeholder="Ingrese la cantidad" required> *@
                                            @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", @placeholder = "Ingrese la cantidad", @required = "required", @type = "number" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Precio en Colones</label>
                                            @* <input type="number" id="Precio" name="Precio" class="form-control form-control-user" placeholder="Ingrese el precio" required> *@
                                            @Html.TextBoxFor(m => m.PrecioUnitarioColones, new { @class = "form-control", @placeholder = "Ingrese el precio en colones", @required = "required", @type = "number" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Precio en Dólares</label>
                                            @* <input type="number" id="Precio" name="Precio" class="form-control form-control-user" placeholder="Ingrese el precio" required> *@
                                            @Html.TextBoxFor(m => m.PrecioUnitarioDolares, new { @class = "form-control", @placeholder = "Ingrese el precio en dólares", @required = "required", @type = "number" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Porcentaje de Venta</label>
                                            @* <input type="number" id="Precio" name="Precio" class="form-control form-control-user" placeholder="Ingrese el precio" required> *@
                                            @Html.TextBoxFor(m => m.PorcentajeVenta, new { @class = "form-control", @placeholder = "Ingrese el porcentaje de venta", @required = "required", @type = "decimal" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <label for="descripcionInventario">Descripción</label>
                                                @* <textarea id="descripcionInventario" name="descripcionInventario" class="form-control" rows="3" placeholder="Ingrese una descripción" required></textarea> *@
                                                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", @placeholder = "Ingrese la descripción", @required = "required" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="descripcionInventario">Prompt del producto</label>
                                            @* <textarea id="descripcionInventario" name="descripcionInventario" class="form-control" rows="3" placeholder="Ingrese una descripción" required></textarea> *@
                                            @Html.TextAreaFor(m => m.Prompt, new { @class = "form-control", @placeholder = "Prompt del producto", @required = "required" })
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="tipoCategoria">Categoría</label>
                                            @Html.DropDownListFor(m => m.IdCategoria, ViewBag.TiposCategorias as List<SelectListItem>, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-last-name">Imagen</label>
                                            <input type="file" id="ImagenProducto" name="ImagenProducto" class="form-control form-control-user" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mt-4">
                                <button type="submit" class="botones" onclick="submitFormInv()">Aceptar</button>
                            </div>
                            <br />
                        </div>
                    }
                    <div class="card-footer text-center py-3">
                        <a href="@Url.Action("ConsultarInventario", "Inventario")" class="inventario-link">Volver al inventario</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/sweetalert.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('editarForm');

        form.addEventListener('submit', function (event) {
            event.preventDefault();

            const formData = new FormData(form);

            $.ajax({
                url: form.action,
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Producto editado',
                        text: 'Tu producto ha sido editado con éxito.',
                        confirmButtonColor: '#c1952c',
                        showConfirmButton: false,
                        timer: 1800
                    }).then(() => {
                        window.location.href = '/Inventario/ConsultarInventario';
                    });
                }
            });
        });
    });
</script>