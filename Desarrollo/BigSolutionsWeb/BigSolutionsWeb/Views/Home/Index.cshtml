@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center d-flex flex-column justify-content-center align-items-center" style="height: 100vh; margin: 0; padding: 0; overflow: hidden;">
    <div style="margin-top: -200px;">
        <img src="~/page/images/bigsolutions-logo.jpg" alt="Logo Big Solutions" class="img-fluid" style="max-width: 200px;">
    </div>
    <div class="mt-3">
        <h1 class="display-5" style="color: #c1952c;">¡Bienvenido a Big Solutions!</h1>
        <p class="lead" style="color: #555;">Somos su solución en <b>Publicidad, Mercadeo y Comunicación</b>.</p>
    </div>
    <div style="margin-top: 50px;" class="row w-100 d-flex justify-content-center">
        <div class="col-md-4 d-flex flex-column align-items-center">
            <i class="fa-solid fa-bullhorn fa-2x" style="color: #c1952c;"></i>
            <h4 class="mt-2" style="color: #000;">Publicidad</h4>
            <p style="color: #555; font-size: 0.9rem;">Impacte con campañas creativas y efectivas.</p>
        </div>
        <div class="col-md-4 d-flex flex-column align-items-center">
            <i class="fa-solid fa-chart-line fa-2x" style="color: #c1952c;"></i>
            <h4 class="mt-2" style="color: #000;">Mercadeo</h4>
            <p style="color: #555; font-size: 0.9rem;">Estrategias adaptadas a su mercado.</p>
        </div>
        <div class="col-md-4 d-flex flex-column align-items-center">
            <i class="fa-solid fa-comments fa-2x" style="color: #c1952c;"></i>
            <h4 class="mt-2" style="color: #000;">Comunicación</h4>
            <p style="color: #555; font-size: 0.9rem;">Fortalezca su marca con mensajes claros y persuasivos.</p>
        </div>
    </div>
</div>
