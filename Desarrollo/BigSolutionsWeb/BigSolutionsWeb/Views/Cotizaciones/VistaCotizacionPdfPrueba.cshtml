@model BigSolutionsWeb.DTOs.CrearCotizacionVistaDTO
@using BigSolutionsWeb.Enums
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cotización</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
            position: relative;
        }

            .header img {
                position: absolute;
                left: 0;
                top: 0;
                width: 100px;
                height: auto;
            }

            .header h1 {
                margin: 0;
                font-size: 24px;
                text-transform: uppercase;
            }

        .info-table {
            width: 100%;
            margin-bottom: 20px;
        }

            .info-table td {
                padding: 8px;
                vertical-align: top;
            }

        .description {
            margin: 20px 0;
            font-size: 16px;
            line-height: 1.5;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .items-table th, .items-table td {
                border: 1px solid #000;
                padding: 8px;
                text-align: left;
            }

            .items-table th {
                background-color: #f2f2f2;
                text-align: center;
            }

        .totals {
            text-align: right;
            margin-top: 20px;
        }

            .totals p {
                margin: 0;
            }

            .totals strong {
                font-size: 16px;
            }

        .image-container {
            text-align: center;
            margin: 10px 0;
        }

            .image-container img {
                max-width: 100px;
                height: auto;
                display: block;
                margin: 0 auto;
            }
    </style>
</head>
<body>
    <div class="header">
        <img src="~/page/images/bigsolutions-logo.jpg" alt="Logo Big Solutions">
        <h1>Cotización</h1>
        <p><strong>Fecha:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
    </div>

    <table class="info-table">
        <tr>
            <td><strong>Señores:</strong> @Model.Usuario.NombreCompleto</td>
            @* <td><strong>Atención:</strong> @Model.Usuario.NombreCompleto</td> *@
        </tr>
        <tr>
            <td><strong>Teléfono:</strong> @Model.Usuario.NumeroTelefono</td>
            <td><strong>Forma de Pago:</strong> 50% adelanto, 50% contra entrega</td>
        </tr>
        <tr>
            <td><strong>Moneda:</strong> @Model.SolicitudCotizacion.Moneda</td>
            <td><strong>Vigencia de Oferta:</strong> 15 días</td>
        </tr>
    </table>

    <!-- Sección para la descripción de la cotización -->
    <div class="description">
        <p><strong>Descripción de la Cotización:</strong> @Model.DescripcionCotizacion</p>
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Nombre del Producto</th>
                <th>Fecha de Generación</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var boceto in Model.Bocetos)
            {
                <tr>
                    <td>@boceto.IdBoceto</td>
                    <td class="image-container">
                        <img src="@boceto.RutaImagen" alt="Imagen Boceto">
                    </td>
                    <td>@boceto.NombreProducto</td>
                    <td>@boceto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td>@boceto.Cantidad</td>
                    <td>
                        @(Model.SolicitudCotizacion.Moneda == Moneda.Colones
                            ? "₡" + boceto.PrecioUnitarioColones.ToString("N2")
                            : "$" + boceto.PrecioUnitarioDolares.ToString("N2"))
                    </td>
                    <td>
                        @(Model.SolicitudCotizacion.Moneda == Moneda.Colones
                            ? "₡" + (boceto.Cantidad * boceto.PrecioUnitarioColones).ToString("N2")
                            : "$" + (boceto.Cantidad * boceto.PrecioUnitarioDolares).ToString("N2"))
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 10px;" class="totals">
        <p>
            <strong>Sub-total:</strong>
            @(Model.SolicitudCotizacion.Moneda == Moneda.Colones
                ? "₡" + Model.SubTotal.ToString("N2")
                : "$" + Model.SubTotal.ToString("N2"))
        </p>
        <p>
            <strong>Impuestos:</strong>
            @(Model.SolicitudCotizacion.Moneda == Moneda.Colones
                ? "₡" + Model.TotalImpuestos.ToString("N2")
                : "$" + Model.TotalImpuestos.ToString("N2"))
        </p>
        <p>
            <strong>Total:</strong>
            @(Model.SolicitudCotizacion.Moneda == Moneda.Colones
                ? "₡" + Model.Total.ToString("N2")
                : "$" + Model.Total.ToString("N2"))
        </p>
    </div>

    <div class="footer">
        @* <p>Condiciones de pago: 50% adelanto, 50% contra entrega</p>
        <p>Vigencia de la oferta: 15 días</p> *@
    </div>
</body>
</html>
