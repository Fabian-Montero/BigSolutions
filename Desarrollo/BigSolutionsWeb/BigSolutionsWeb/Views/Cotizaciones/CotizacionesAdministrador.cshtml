@model List<BigSolutionsWeb.Entidades.Cotizacion>

@{
    ViewData["Title"] = "Mis cotizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Cotizaciones</h1>
        <p>Aquí puedes ver todas las cotizaciones generadas para los clientes.</p>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Cotizaciones</h3>
            @* <a href="@(Url.Action("CrearCotizacionClienteConListaCliente", "Cotizaciones"))" class="botones-secundarios">Generar Cotización</a> *@
        </div>
        <div class="card-body" style="padding-left: 15px; padding-right: 15px;">
            <table id="tabla-Bocetos" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Número de solicitud</th>
                        <th style="text-align:left">Descripción de la solicitud</th>
                        <th style="text-align:left">Fecha de Generación</th>
                        
                        <th style="text-align:left">Cliente</th>
                        <th style="text-align:left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cotizacion in Model)
                    {
                        <tr>
                            <td style="text-align:left">@cotizacion.IdSolicitudCotizacion</td>
                            <td style="text-align:left">@cotizacion.Descripcion</td>
                            <td style="text-align:left">@cotizacion.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            
                            <td style="text-align:left">@cotizacion.NombreCompleto</td>
                            <td style="text-align:left">
                                <a href="@(Url.Action("ConsultarCotizaciones", "Cotizaciones", new { id = cotizacion.IdSolicitudCotizacion }))" class="botones">Ver detalles</a>
                                <a href="@(Url.Action("EditarSolicitudCotizacionCliente", "Cotizaciones", new { id = cotizacion.IdSolicitudCotizacion }))" class="botones">Editar</a>
                                <a class="botones eliminar-producto" href="#" data-id="@cotizacion.IdSolicitudCotizacion">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        // Inicializar DataTable
        var table = $('#tabla-Bocetos').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            }
        });

        // Alerta de eliminación
        $('#tabla-Bocetos').on('click', '.eliminar-producto', function (e) {
            e.preventDefault();
            var $row = $(this).closest('tr');
            var solicitudId = $(this).data('id');
            Swal.fire({
                title: '¿Está seguro que deseas eliminarlo?',
                text: "No podrás revertir esto",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#c1952c',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarla',
                customClass: {
                    popup: 'my-swal-popup'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Eliminada',
                        text: 'La cotización ha sido eliminada',
                        icon: 'success',
                        confirmButtonColor: '#c1952c',
                        customClass: {
                            popup: 'my-swal-popup'
                        }
                    }).then(() => {
                        // Aquí puedes agregar la lógica para eliminar la solicitud en el servidor
                        // por ejemplo, enviando una solicitud AJAX para eliminar la solicitud.
                        $row.remove();
                    });
                }
            });
        });
    });
</script>
