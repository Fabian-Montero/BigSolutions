@{
    ViewData["Title"] = "Solicitudes de Cotización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Solicitudes de Cotización</h1>
        <p>Aquí puedes ver todas las solicitudes de cotización generadas por los clientes.</p>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Solicitudes de Cotización</h3>
        </div>
        <div class="card-body" style="padding-left: 15px; padding-right: 15px;">
            <table id="tabla-Solicitudes" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Número de Solicitud</th>
                        <th style="text-align:left">Descripción de la Solicitud</th>
                        <th style="text-align:left">Fecha de Generación</th>
                        <th style="text-align:left">Estado</th>
                        <th style="text-align:left">Cliente</th>
                        <th style="text-align:left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:left">111</td>
                        <td style="text-align:left">
                            Entregar el 15 de agosto del 2024
                        </td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">Pendiente</td>
                        <td style="text-align:left">Cliente 1</td>
                        <td style="text-align:left">
                            <a href="@(Url.Action("ConsultarSolicitudCotizacionClientes", "Cotizaciones", new { id = 11111 }))" class="botones">Ver detalles</a>
                            <a href="@Url.Action("CrearCotizacionClienteConListaCliente", "Cotizaciones")" class="botones">Generar una cotización</a>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">222</td>
                        <td style="text-align:left">
                            Entregar el 20 de septiembre del 2024
                        </td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">En Proceso</td>
                        <td style="text-align:left">Cliente 2</td>
                        <td style="text-align:left">
                            <a href="@(Url.Action("ConsultarSolicitudCotizacionClientes", "Cotizaciones", new { id = 11112 }))" class="botones">Ver detalles</a>
                            <a href="@Url.Action("CrearCotizacionClienteConListaCliente", "Cotizaciones")" class="botones">Generar una cotización</a>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">333</td>
                        <td style="text-align:left">
                            Entregar el 10 de octubre del 2024
                        </td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">Completado</td>
                        <td style="text-align:left">Cliente 3</td>
                        <td style="text-align:left">
                            <a href="@(Url.Action("ConsultarSolicitudCotizacionClientes", "Cotizaciones", new { id = 11113 }))" class="botones">Ver detalles</a>
                            <a href="@Url.Action("CrearCotizacionClienteConListaCliente", "Cotizaciones")" class="botones">Generar una cotización</a>
                        </td>
                    </tr>
                    @* } *@
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    $(document).ready(function () {
        var table = $('#tabla-Solicitudes').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            }
        });
    });
</script>
