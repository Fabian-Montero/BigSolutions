@{
    ViewData["Title"] = "Detalles de la Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Detalles de la Solicitud</h1>
        <p>Aquí puedes ver los bocetos asociados a esta solicitud.</p>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <h3>Información de la Solicitud</h3>
        </div>
        <div class="card-body">
            <p><strong>Número de Solicitud:</strong> 111</p>
            <p><strong>Estado de la Solicitud:</strong> Pendiente</p>
            <p><strong>Fecha de Creación:</strong> @DateTime.Now</p>
            <p><strong>Descripción de la Solicitud:</strong> En esta solicitud se necesitan los productos antes de la fecha de 15 de agosto del 2024</p>
            <p><strong>Cliente:</strong> Juan Pérez</p>
        </div>
    </div>
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Bocetos Asociados</h3>
        </div>
        <div class="card-body" style="padding-left: 15px; padding-right: 15px;">
            <table id="tabla-Bocetos" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Número de Boceto</th>
                        <th style="text-align:left">Imagen del Boceto</th>
                        <th style="text-align:left">Producto</th>
                        <th style="text-align:left">Fecha de Generación</th>
                        <th style="text-align:left">Descripción</th>
                        <th style="text-align:left">Cantidad</th>
                        <th style="text-align:left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <tr>
                        <td style="text-align:left">11111</td>
                        <td style="text-align:left">
                            <img src="~/page/images/imagenbotella.jpeg" class="boceto-img" alt="Boceto" style="width: 80px; height: auto;cursor: pointer;" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">
                        </td>
                        <td style="text-align:left">Botella</td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">Descripción del boceto 1</td>
                        <td style="text-align:left">50</td>
                        <td style="text-align:left">
                            <button class="botones view-image" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">Ver Imagen</button>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">11112</td>
                        <td style="text-align:left">
                            <img src="~/page/images/imagenbotella.jpeg" class="boceto-img" alt="Boceto" style="width: 80px; height: auto;cursor: pointer;" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">
                        </td>
                        <td style="text-align:left">Botella</td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">Descripción del boceto 2</td>
                        <td style="text-align:left">30</td>
                        <td style="text-align:left">
                            <button class="botones view-image" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">Ver Imagen</button>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">11113</td>
                        <td style="text-align:left">
                            <img src="~/page/images/imagenbotella.jpeg" class="boceto-img" alt="Boceto" style="width: 80px; height: auto;cursor: pointer;" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">
                        </td>
                        <td style="text-align:left">Botella</td>
                        <td style="text-align:left">@DateTime.Now</td>
                        <td style="text-align:left">Descripción del boceto 3</td>
                        <td style="text-align:left">20</td>
                        <td style="text-align:left">
                            <button class="botones view-image" data-toggle="modal" data-target="#imageModal" data-src="@Url.Content("~/page/images/imagenbotella.jpeg")">Ver Imagen</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center py-3">
            <a href="@Url.Action("ConsultarSolicitudesCotizacionesClientes", "Cotizaciones")" class="inventario-link">Volver a las solicitudes de cotización</a>
        </div>
    </div>
    <div class=" mt-4">
        <a href="@Url.Action("CrearCotizacionClienteConListaCliente", "Cotizaciones")" class="botones-secundarios">Generar una cotización con esta solicitud</a>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Imagen del Boceto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Boceto Ampliado">
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    $(document).ready(function () {
        var table = $('#tabla-Bocetos').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json'
            }
        });

        $('#tabla-Bocetos').on('click', '.boceto-img', function () {
            var src = $(this).data('src');
            $('#modalImage').attr('src', src);
        });

        $('#tabla-Bocetos').on('click', '.view-image', function () {
            var src = $(this).data('src');
            $('#modalImage').attr('src', src);
        });
    });
</script>
