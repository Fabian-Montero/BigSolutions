@model BigSolutionsWeb.DTOs.CrearSolicitudCotizacionVistaDTO

@{
    ViewData["Title"] = "Crear Solicitud de Cotización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top: 50px;">
    <div class="text-center mb-4">
        <h1>Crear Solicitud de Cotización</h1>
        <p>Selecciona los bocetos que deseas cotizar y agrega una descripción para cada uno. También puedes agregar una descripción general para la solicitud.</p>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Bocetos Generados</h3>
        </div>
        <div class="card-body">
            <table id="tabla-Bocetos" class="table table-hover">
                <thead>
                    <tr>
                        <th style="text-align:left">Seleccionar</th>
                        <th style="text-align:left">Número de Boceto</th>
                        <th style="text-align:left">Imagen del Boceto</th>
                        <th style="text-align:left">Producto</th>
                        <th style="text-align:left">Fecha de Generación</th>
                        <th style="text-align:left">Descripción</th>
                        <th style="text-align:left">Cantidad</th>
                        <th style="text-align:left">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var boceto in Model.Bocetos)
                    {
                        <tr>
                            <td style="text-align:left">
                                <input type="checkbox" name="selectBoceto" class="select-boceto">
                            </td>
                            <td style="text-align:left">@boceto.IdBoceto</td>
                            <td style="text-align:left">
                                <img src="@boceto.RutaImagen" class="boceto-img" style="width: 80px; height: auto; cursor: pointer;" alt="Boceto" data-toggle="modal" data-target="#imageModal" data-src="@boceto.RutaImagen">
                            </td>
                            <td style="text-align:left">@boceto.NombreProducto</td>
                            <td style="text-align:left">@boceto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td style="text-align:left">
                                <textarea class="form-control boceto-description" rows="2" placeholder="Descripción del boceto"></textarea>
                            </td>
                            <td style="text-align:left">
                                <input type="number" class="form-control boceto-cantidad" placeholder="Cantidad">
                            </td>
                            <td style="text-align:left">
                                <button class="botones view-image" data-toggle="modal" data-target="#imageModal" data-src="@boceto.RutaImagen">Ver Imagen</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h3 class="mb-0">Descripción General de la Solicitud</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="generalDescription">Descripción General</label>
                <textarea id="generalDescription" class="form-control" rows="4" placeholder="Descripción general de la solicitud">@Model.DescripcionGeneral</textarea>
            </div>
            <div class="form-group">
                <label for="moneda">Moneda</label>
                <select id="moneda" class="form-control">
                    @foreach (var moneda in Enum.GetValues(typeof(BigSolutionsWeb.Enums.Moneda)))
                    {
                        <option value="@((int)moneda)">@moneda</option>
                    }
                </select>
            </div>
            <button type="button" class="botones-secundarios" id="enviarSolicitud">Enviar Solicitud de Cotización</button>
        </div>

        <div class="card-footer text-center py-3">
            <a href="@Url.Action("ConsultarSolicitudCotizacionesCliente", "Cotizaciones")" class="inventario-link">Volver a las solicitudes de cotización</a>
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Imagen del Boceto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="Boceto Ampliado">
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        // Recalcular los totales
        function recalculateTotals() {
            let subtotal = 0;
            let totalImpuestos = 0;

            // Iterar sobre cada fila de la tabla para calcular los valores
            $('#tabla-Bocetos tbody tr').each(function () {
                const cantidad = parseFloat($(this).find('.boceto-cantidad').val()) || 0;
                const precio = parseFloat($(this).find('.precio').val()) || 0;

                // Subtotal por ítem
                const itemSubtotal = cantidad * precio;
                subtotal += itemSubtotal;

                // Impuestos por ítem (13%)
                totalImpuestos += itemSubtotal * 0.13;
            });

            // Calcular el total
            const total = subtotal + totalImpuestos;

            // Actualizar los valores en la vista
            $('#subtotal').text(subtotal.toFixed(2));
            $('#totalImpuestos').text(totalImpuestos.toFixed(2));
            $('#total').text(total.toFixed(2));
        }

        // Crear el objeto DTO para la cotización
        function buildCotizacionObject() {
            const usuario = {
                NombreCompleto: $('#nombreCliente').text(),
                NumeroTelefono: $('#telefonoCliente').text(),
                CorreoElectronico: $('#correoCliente').text()
            };

            const solicitudCotizacion = {
                IdSolicitudCotizacion: parseInt($('#idSolicitudCotizacion').val()),
                Descripcion: $('#descripcionSolicitud').text(),
                Moneda: parseInt($('#moneda').val())
            };

            const bocetos = [];
            $('#tabla-Bocetos tbody tr').each(function () {
                const idBoceto = parseInt($(this).find('td').eq(1).text());
                const cantidad = parseFloat($(this).find('.boceto-cantidad').val()) || 0;
                const precio = parseFloat($(this).find('.precio').val()) || 0;

                if (cantidad > 0) {
                    bocetos.push({
                        IdBoceto: idBoceto,
                        Cantidad: cantidad,
                        PrecioUnitarioColones: precio,
                        PrecioUnitarioDolares: precio
                    });
                }
            });

            const subtotal = parseFloat($('#subtotal').text()) || 0;
            const totalImpuestos = parseFloat($('#totalImpuestos').text()) || 0;
            const total = parseFloat($('#total').text()) || 0;

            return {
                Usuario: usuario,
                SolicitudCotizacion: solicitudCotizacion,
                DescripcionCotizacion: $('#generalDescription').val(),
                Bocetos: bocetos,
                SubTotal: subtotal,
                TotalImpuestos: totalImpuestos,
                Total: total
            };
        }

        // Manejar la visualización de imágenes
        $('#tabla-Bocetos').on('click', '.boceto-img, .view-image', function () {
            const src = $(this).data('src');
            $('#modalImage').attr('src', src);
            $('#imageModal').modal('show');
        });

        // Enviar la solicitud de cotización al servidor
        $('#enviarSolicitud').on('click', function () {
            const cotizacion = buildCotizacionObject();

            if (cotizacion.Bocetos.length === 0) {
                Swal.fire('Atención', 'Selecciona al menos un boceto con cantidad válida.', 'warning');
                return;
            }

            $.ajax({
                url: '/Cotizaciones/CrearCotizacionClienteConListaCliente',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(cotizacion),
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Cotización generada',
                        text: response.message
                    }).then(() => {
                        window.location.href = '/Cotizaciones/ConsultarSolicitudCotizacionesCliente';
                    });
                },
                error: function () {
                    Swal.fire('Error', 'Hubo un problema al generar la cotización.', 'error');
                }
            });
        });

        // Evento: Recalcular totales al cambiar cantidad o precio
        $(document).on('input', '.boceto-cantidad, .precio', function () {
            recalculateTotals();
        });

        // Inicializar los cálculos al cargar la página
        recalculateTotals();
    });
</script>


